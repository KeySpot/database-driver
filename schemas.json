{
    "records": {
        "bsonType": "object",
        "required": ["sub", "name"],
        "additionalProperties": false,
        "properties": {
            "_id": {
                "bsonType": "objectId"
            },
            "sub": {
                "bsonType": "string"
            },
            "name": {
                "bsonType": "string",
                "maxLength": 128
            },
            "record": {
                "bsonType": "object",
                "maxProperties": 1024,
                "additionalProperties": false,
                "patternProperties": {
                    "^[a-zA-Z0-9-_][a-zA-Z0-9-_ ]{0,126}[a-zA-Z0-9-_]$": {
                        "bsonType": "string",
                        "maxLength": 4096
                    }
                }
            }
        }
    },
    "encryption": {
        "bsonType": "object",
        "required": ["sub", "encryptedKey"],
        "additionalProperties": false,
        "properties": {
            "_id": {
                "bsonType": "objectId"
            },
            "sub": {
                "bsonType": "string"
            },
            "encryptedKey": {
                "bsonType": "string"
            }
        }
    }
}